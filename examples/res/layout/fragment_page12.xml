<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/partBackground"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/partBackground"
        android:orientation="horizontal">

        <com.rexy.example.extend.FadeTextButton
            android:background="@color/optionBackground"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="button1"
            android:textColor="@color/select_tab_item_text"/>

        <com.rexy.example.extend.FadeTextButton
            android:background="@color/optionBackground"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="button2"
            android:textColor="@color/select_tab_item_text"/>
    </LinearLayout>

    <SeekBar android:layout_margin="15dp" android:layout_width="match_parent" android:layout_height="10dp"/>

    <TextView android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/jump" android:layout_margin="15dp" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>