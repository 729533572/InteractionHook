<?xml version="1.0" encoding="utf-8"?>
<com.rexy.widgets.layout.WrapLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:lineMaxItemCount="1"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <SeekBar android:layout_margin="15dp" android:layout_width="match_parent" android:layout_height="10dp"/>
    <TextView android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/jump" android:layout_margin="15dp" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</com.rexy.widgets.layout.WrapLayout>